<include file="Common:header" title_pre="搜索结果 | " />
<include file="Common:top" />
<div class='main'>
    <div class='left'>
        <div style="margin-top:20px;border: solid 1px red;padding:10px">{$info}</div>
        <volist name='result' id='con'>
        <ul>
            <li>
                <div class="article">
                    <notempty name='con.title'>
                    <h2>
                        <a href="">{$con.title}</a>
                    </h2>
                    </notempty>
                    <div class="entry_post">
                        <span>
                            {$con.summary|default=$con['content']}
                        </span>
                        <notempty name='con.summary'>
                        <span class="more">
                            <a href="__APP__/Home/{$con.code}/{$con.id}.html" title="详细阅读 开源：小型CRM客户管理系统">阅读全文</a>
                        </span>
                        </notempty>
                    </div>
                    <div class="clear"></div>
                    <div class="info">作者：{$con.create_by|default=1988|displayUserName} | 发布：{$con.create_date|default=$con['send_date']|time_format} | 分类：
                        {$con.code|getCategory} <notempty name='con.views'>| 阅读：{$con.views}次</notempty>
                    </div>
                </div>
            </li>
        </ul>
        <div class="clear"></div>
        </volist>
    </div>
    <include file="Common:right" />
</div>
<div class="clear"></div>
<include file="Common:bottom" />