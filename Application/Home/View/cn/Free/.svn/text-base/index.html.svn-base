<include file="Common:header" title_pre="心情随笔 | " />
<include file="Common:top" />
<div class="main">
    <div class="free_container" style="width:732px;margin-left:-10px;float:left">
        <!-- E TimeLine导航 -->
        <div class="free_timeline_container">
            <div class="free_timeline">
                <div class="free_plus"></div>
            </div>
        </div>
        <!-- E TimeLine导航 -->
        <volist name="free" id="con">
            <!-- S item -->
            <div class="free_item">         
                <div class="msgBox" >      
                    <div class="msgCnt">
                        {$con.content}
                        <notempty name="con.pic" value="">
                            <div class="pic"><img width="300px" src="{$con.pic}"></div>
                        </notempty>
                    </div>                  
                    <div class="pubInfo">            
                        <div class="free_date">{$con.send_date|time_format}</div> 
                        <div class="funBox">
                            <a href="javascript:void(0);" class="relay" data-action='zan' free-id='{$con.id}' title="赞">
                                <em class="W_ico20 icon_praised_b"></em><neq name='con.zan' value='0'>({$con.zan})</neq>
                            </a>
                            <!--                            <a href="" class="relay"><i class="ico_relay"></i>转播</a>-->
                            <span>|</span>       
                            <a href="javascript:void(0)" class="comt"><i class="ico_comt"></i>评论</a>
                        </div>
                        <div class="clear"></div>  
                    </div>
                </div>
            </div>
            <!-- E item -->
        </volist>
    </div>
    <include file="Common:right" />
</div>
<include file="Common:bottom" />
<script type="text/javascript" src="__PUBLIC__/Js/jquery.masonry.min.js"></script>
<link rel="stylesheet" type="text/css" href="__PUBLIC__/Home/css/free.css">
<script type="text/javascript" >
    $(function() {
        // masonry plugin call
        $('.free_container').masonry({itemSelector: '.free_item'});

        //injecting arrow points
        function Arrow_Points() {
            var s = $(".free_container").find(".free_item");
            $.each(s, function(i, obj) {
                var posLeft = $(obj).css("left");
                if (posLeft == "0px") {
                    html = "<span class='rightCorner'></span>";
                    $(obj).prepend(html);
                } else {
                    html = "<span class='leftCorner'></span>";
                    $(obj).prepend(html);
                }
            });
        }
        Arrow_Points();
    });
</script>