<link rel="stylesheet" type="text/css" href="__PUBLIC__/makedown/editor.css" />
<script type="text/javascript" src="__PUBLIC__/makedown/jQuery/jquery.js"></script>
<script type="text/javascript" src="__PUBLIC__/makedown/jQuery/showdown.js"></script>
<script type="text/javascript" src="__PUBLIC__/makedown/jQuery/wmd.js"></script>
<script type="text/javascript" src="__PUBLIC__/makedown/jQuery/prettify.js"></script>
<form action='__URL__/{$action}.html' method='post'>
    <div>
        <div class='input-prepend'>
            <span class='add-on red'>角色名称</span>
            <input type='text' class='span2' required='required' name='name' value='{$vo.name}'/>
        </div>
    </div>
    <div>
        <div class='input-prepend'>
            <span class='add-on red'>角色描述</span>
            <input type='text' class='span2' required='required' name='remark' value='{$vo.remark}'/>
        </div>
    </div>
    <div class='tc mt20'>
        <input type="hidden" name='id' value='{$vo.id}' />
        <input type='submit' class='btn btn-primary' value='保存' />
    </div>
</form>
