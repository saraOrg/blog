<script type="text/javascript">
	var settings = {isShowClear:false,isShowOK:false,qsEnabled:false};
</script>
<form action='__URL__/{$action}.html' method='post'>
    <input type='hidden' name='user_id' value='{$vo.user_id}' />
    <div>
        <ul class='nav nav-tabs'>
            <li class='active'><a href='#basic_info' data-toggle='tab'>基本信息</a></li>
            <li><a href='#extend_info' data-toggle='tab'>扩展信息</a></li>
            <li><a href='#role_info' data-toggle='tab'>角色分配</a></li>
        </ul>
        <div class='tab-content'>
            <div class='tab-pane active' id='basic_info'>
                <div>
                    <div class='input-prepend'>
                        <span class='add-on red'>登陆名称</span>
                        <input type='text' required="required" title='请输入登录名称' placeholder="请输入登陆名称" name='login_name' value='{$vo.login_name}' />
                    </div>
                    <div class='input-prepend'>
                        <span class='add-on <eq name="action" value="insert">red</eq>'>登录密码</span>
                        <input type='password' <if condition="$action eq 'insert'">required="required" title='请输入登录密码' placeholder="请输入登录密码"<else />placeholder="留空表示不更改"</if> name='password' />
                    </div>
                </div>
                <div>
                    <div class='input-prepend'>
                        <span class='add-on red'>用户昵称</span>
                        <input type='text' required="required" title='请输入用户昵称' placeholder="请输入用户昵称" name='nick_name' value='{$vo.nick_name}' />
                    </div>
                    <div class='input-prepend'>
                        <span class='add-on red'>用户全名</span>
                        <input type='text' required="required" title='请输入用户全名' placeholder="请输入用户全名" name='full_name' value='{$vo.full_name}' />
                    </div>
                </div>
                <div>
                    <div class='input-prepend pr50'>
                        <span class='add-on red'>用户性别</span>
                    </div>
                    <input class='radio' type='radio' name='sex' value='0' checked />男
                    &nbsp;&nbsp;
                    <input class='radio' type='radio' name='sex' value='1' <eq name='vo.type' value='1'>checked</eq> />女
                    <div class='input-prepend fr'>
                        <span class='add-on red'>出生日期</span>
                        <input type='text' class='Wdate' onFocus="WdatePicker(settings)" required="required" title='请输入出生日期' placeholder="请输入出生日期" name='date' value='{$vo.date}' />
                    </div>
                </div>
                <div>
                    <div class='input-prepend'>
                        <span class='add-on red'>电子邮箱</span>
                        <input type='text' required="required" title='请输入电子邮箱' placeholder="请输入电子邮箱" name='email' value='{$vo.email}' />
                    </div>
                    <div class='input-prepend'>
                        <span class='add-on red'>电话号码</span>
                        <input type='text' required="required" title='请输入用户电话号码' placeholder="请输入用户电话号码" name='mobile' value='{$vo.mobile}' />
                    </div>
                </div>
            </div>
            <div class='tab-pane' id='extend_info'>
                <div>
                    <div class='input-prepend'>
                        <span class='add-on'>毕业院校</span>
                        <input type='text' name=''/>
                    </div>
                </div>
            </div>
            <div class='tab-pane' id='role_info'>
                <div>
                    <div>
                        <foreach name='roleList' item='role'>
                            <input type='checkbox' name='role_id[]' value='{$role.id}' <in name='role.id' value='$roleUser'>checked</in> />{$role.name}
                            &nbsp;&nbsp;
                        </foreach>
                    </div>
                </div>
            </div>
        </div>
        <div class='tc mt10'>
            <input type='submit' class='btn btn-primary' value='保存' />
        </div>
</form>
<script type='text/javascript'>
    $(function() {
