<tagLib name='Happy' />
<!DOCTYPE html>
<html>
    <head>
        {:resource('basic,mydate', '系统用户列表')}
    </head>
    <body>
        <div class='container-fluid'>
            <include file='Public:navigate' />
            <div class='btn-group' style='margin:10px'>
                <if condition="checkAuth(MODULE_NAME.'/'.CONTROLLER_NAME.'/add')">
                    <a class='btn' href='javascript:void(0)' onclick='EU.location.add(this, false, {title: this.title, id: "add_user_dialog"});'><i class='icon-plus-sign'></i> 添加</a>
                </if>
                <if condition="checkAuth(MODULE_NAME.'/'.CONTROLLER_NAME.'/foreverdelete')">
                    <a class='btn' href='javascript:void(0)' onclick='EU.location.del(false, true);'><i class='icon-remove-sign'></i> 删除</a>
                </if>
            </div>
            <div class='scroll'>
                <Happy:list style='table table-bordered table-nowrap table-striped' datasource='list' name='vo' pk='user_id' checkbox='key' show='login_name:登陆名称,nick_name:昵称,full_name:全名,date:出生日期,email:电子邮箱,mobile:手机'  action='true' actionlist='EU.location.edit:编辑' />
            </div>
        </div>
    </body>
</html>
