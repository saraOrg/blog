<!DOCTYPE html>
<tagLib name="happy" />
<html>
    <head>
        {:resource('basic', '數據字典類型')}
    </head>
    <body>
        <div class='container-fluid'>
            <include file='Public:navigate' />
            <div class='btn-group' style='margin:10px;'>
                <a class='btn' href="javascript:void(0)" onclick="EU.location.add()"><i class='icon-plus-sign'></i> 添加</a>
                <a class='btn' href="javascript:void(0)" onclick="EU.location.del(false, true)"><i class='icon-remove-sign'></i> 刪除</a>
            </div>
            <div class='scroll'>
                <happy:list pk="type_id" datasource='list' name='val' checkbox="key" show='type_id:分類ID,type_value:分類代碼,type_remark:分類描述' style="table table-bordered table-striped table-nowrap" action='true' actionlist='EU.location.edit:編輯'/>
            </div>
        </div>
    </body>
</html>
